<body>
  <div class="row justify-content-center">
  <div class="col-lg-9 col-xl-8">

    <div class="glass-card p-5 shadow-lg rounded-4">

      <h2 class="text-center fw-bold mb-4">
        ✏️ Edit Listing
      </h2>

      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">

        <div class="row g-4">

          <!-- Title -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" name="listingObj[title]"
              value="<%= listing.title %>" placeholder="Title" required>
            <label>Title</label>
          </div>

          <!-- Price -->
          <div class="col-md-6 form-floating">
            <input type="number" class="form-control" name="listingObj[price]"
              value="<%= listing.price %>" placeholder="Price" required>
            <label>Price (₹)</label>
          </div>

          <!-- Description -->
          <div class="col-12 form-floating">
            <input type="text" class="form-control" name="listingObj[description]"
              value="<%= listing.description %>" placeholder="Description" required>
            <label>Description</label>
          </div>

          <!-- Location -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" name="listingObj[location]"
              value="<%= listing.location %>" placeholder="Location" required>
            <label>Location</label>
          </div>

          <!-- Country -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" name="listingObj[country]"
              value="<%= listing.country %>" placeholder="Country" required>
            <label>Country</label>
          </div>

          <!-- Image -->
          <div class="col-12 form-floating">
            <input type="text" class="form-control" name="listingObj[image]"
              value="<%= listing.image %>" placeholder="Image URL">
            <label>Image URL</label>
          </div>

          <!-- WiFi -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" name="listingObj[wifiSpeed]"
              value="<%= listing.wifiSpeed %>" placeholder="WiFi Speed">
            <label>WiFi Speed</label>
          </div>

          <!-- Intern Duration -->
          <div class="col-md-6 form-floating">
            <input type="text" class="form-control" name="listingObj[internDuration]"
              value="<%= listing.internDuration %>" placeholder="Intern Duration">
            <label>Intern Duration</label>
          </div>

          <!-- Workspace Type -->
          <div class="col-md-6">
            <label class="form-label fw-semibold">Workspace Type</label>
            <select class="form-select" name="listingObj[workspaceType]">
              <option value="">Select Workspace Type</option>
              <option value="Private Study Room"
                <%= listing.workspaceType === "Private Study Room" ? "selected" : "" %>>
                Private Study Room
              </option>
              <option value="Common Workspace"
                <%= listing.workspaceType === "Common Workspace" ? "selected" : "" %>>
                Common Workspace
              </option>
            </select>
          </div>

          <!-- Available From -->
          <div class="col-md-6 form-floating">
            <input type="date" class="form-control" name="listingObj[availableFrom]"
              value="<%= listing.availableFrom ? listing.availableFrom.toISOString().split('T')[0] : '' %>">
            <label>Available From</label>
          </div>

          <!-- Amenities -->
          <div class="col-12">
            <h6 class="fw-bold mb-3">✨ Amenities</h6>

            <div class="row">
              <% const amenities = [
                { key: "studyDesk", label: "Study Desk" },
                { key: "powerBackup", label: "Power Backup" },
                { key: "cctv", label: "CCTV" },
                { key: "biometricEntry", label: "Biometric Entry" },
                { key: "mealsIncluded", label: "Meals Included" },
                { key: "laundry", label: "Laundry" }
              ]; %>

              <% amenities.forEach(item => { %>
                <div class="col-md-4 form-check mb-2">
                  <input class="form-check-input" type="checkbox"
                    name="listingObj[<%= item.key %>]" value="true"
                    <%= listing[item.key] ? "checked" : "" %>>
                  <label class="form-check-label"><%= item.label %></label>
                </div>
              <% }) %>
            </div>
          </div>

          <!-- Submit -->
          <div class="col-12 mt-4">
            <button type="submit"
              class="btn btn-warning w-100 py-3 fw-semibold rounded-3 shadow-sm">
              Update Listing
            </button>
          </div>

        </div>
      </form>

    </div>

  </div>
</div>
</body>